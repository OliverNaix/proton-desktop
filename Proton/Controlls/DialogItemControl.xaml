<UserControl x:Class="Proton.Controlls.DialogItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proton.Controlls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <Grid>
        <Border CornerRadius="90" Background="#FF00AEFF" Margin="0,0,140,0" Width="40" Height="40">
            <TextBlock Text="T" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontFamily="/Proton;component/Assets/Fonts/#Open Sans SemiBold" FontSize="20"></TextBlock>
        </Border>
        <TextBlock x:Name="Username" Text="Username" Margin="55,10,10,10"/>
    </Grid>
</UserControl>
