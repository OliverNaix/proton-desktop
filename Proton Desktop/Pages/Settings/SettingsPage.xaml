<Page x:Class="Proton_Desktop.Pages.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proton_Desktop.Pages.Settings" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="57*"/>
        </Grid.ColumnDefinitions>
        
        <ListBox Grid.Column="0"
                  Style="{StaticResource MaterialDesignListBox}"
              Background="#FFFAFAFA" BorderBrush="#89FF0000">
            <Button
                Margin="30"
                Width="160"
                Style="{StaticResource MaterialDesignFlatButton}" FontFamily="/Proton Desktop;component/Fonts/#Open Sans" Background="#FFFAFAFA" BorderBrush="{x:Null}" Foreground="#DD191919">
                Network
            </Button>

        </ListBox>
        <Frame Grid.Column="1" Source="/Proton Desktop;component/Pages/Settings/NetworkSettingsPage.xaml" NavigationUIVisibility="Hidden"></Frame>
        
    </Grid>
</Page>
